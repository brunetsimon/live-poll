{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin{,/**}",
        "destination": "/index.html"
      },
      {
        "source": "/client{,/**}",
        "destination": "/index.html"
      },
      {
        "source": "/server{,/**}",
        "destination": "/index.html"
      },
      {
        "source": "/login{,/**}",
        "destination": "/index.html"
      },
      {
        "source": "/signup{,/**}",
        "destination": "/index.html"
      },
      /* {
        "source": "**",
        "destination": "/index.html"
      }, */
      {
        "source": "/api{,/**}",
        "function": "api"
      }
    ]
  }
}